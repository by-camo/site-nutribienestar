---
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';

// FunciÃ³n para generar rutas estÃ¡ticas
export async function getStaticPaths() {
	const posts = await getCollection('posts'); // ðŸ”¹ Mueve esto dentro de la funciÃ³n

	return posts.map((post) => ({
		params: { slug: post.slug },
		props: { post },
	}));
}

const { post } = Astro.props;

if (!post) {
	throw new Error('Post no encontrado');
}

const { Content } = await post.render();
---

<BlogLayout title={post.data.title}>
	<div class="flex w-full flex-col gap-[1rem]">
		<div class="h-[500px] w-full">
			<img
				src={post.data.image}
				alt={post.data.title}
				class="h-full w-full rounded object-cover"
			/>
		</div>
		<div>
			<h1 class="heading text-brandPrimary textShadow text-center">
				{post.data.title}
			</h1>
			<small class="leading"
				>{new Date(post.data.date).toLocaleDateString()}</small
			>
			<article class="main mt-[1rem] text-center">
				<Content />
			</article>
		</div>
	</div>
</BlogLayout>
