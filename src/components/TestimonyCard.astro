---
// components/TestimonyCard.astro

const { testimony } = Astro.props;

// const { testimony } = Astro.props;

if (!testimony) {
	throw new Error('No se recibió un testimonio válido en TestimonyCard');
}
---

<div
	class="border-accent flex min-w-[360px] h-auto flex-col gap-[1rem] rounded border-[0.375rem] p-[1rem] text-center shadow-lg"
>
	<div
		class="testimonies-carouse__item flex items-center justify-between gap-[1rem] rounded transition-transform duration-500 ease-in-out"
	>
		<img
			src={testimony.data.image}
			alt={`Foto de perfil de ${testimony.data.author}`}
			class="rounded-[50%] object-cover"
			width={96}
			height={96}
		/>
		<h2 class="title text-neutral-700">{testimony.data.author}</h2>
		<div class="h-[96px] w-[96px]"></div>
	</div>
	<div>
		<p class="main">{testimony.data.body}</p>
	</div>
</div>

<style>
	.testimonies-carousel__item.focused {
		transform: scale(1.1);
		z-index: 1;
	}
</style>
